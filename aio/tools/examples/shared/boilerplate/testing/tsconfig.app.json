{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [],
    // TODO(FW-2145): turn lib checks back on after fixing in-memory-api and investigating impact of ModuleWithProviders
    "skipLibCheck": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/*-specs.ts",
    "src/**/*.avoid.ts",
    "src/**/*.0.ts",
    "src/**/*.1.ts",
    "src/**/*.1b.ts",
    "src/**/*.2.ts",
    "src/**/*.3.ts",
    "src/**/*.4.ts",
    "src/**/*.5.ts",
    "src/**/*.6.ts",
    "src/**/*.7.ts",
    "src/**/testing"
  ]
}

{
  "angularCompilerOptions": {
    "annotationsAs": "static fields",
    "annotateForClosureCompiler": true,
    "alwaysCompileGeneratedCode": true
  },

  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "outDir": "built",
    "rootDir": ".",
    "declaration": true,
    "types": []
  },

  "exclude": [
    "vendor",
    "node_modules",
    "built",
    "dist",
    "e2e"
  ]
}

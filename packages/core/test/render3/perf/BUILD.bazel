package(default_visibility = ["//visibility:private"])

load("//tools:defaults.bzl", "ts_library", "ng_rollup_bundle")

ts_library(
    name = "perf_lib",
    srcs = glob(
        ["**/*.ts"],
    ),
    deps = [
        "//packages/core",
    ],
)

ng_rollup_bundle(
    name = "interpolation",
    entry_point = ":interpolation/index.ts",
    deps = [
        ":perf_lib",
    ],
)

ng_rollup_bundle(
    name = "noop_change_detection",
    entry_point = ":noop_change_detection/index.ts",
    deps = [
        ":perf_lib",
    ],
)
load("//tools:defaults.bzl", "jasmine_node_test", "karma_web_test_suite", "ts_library")

ts_library(
    name = "test_lib",
    testonly = True,
    srcs = glob(["**/*.ts"]),
    deps = [
        "//packages:types",
        "//packages/core",
        "//packages/core/testing",
        "//packages/service-worker",
        "//packages/service-worker/testing",
        "//packages/service-worker/worker",
        "//packages/service-worker/worker/testing",
        "@npm//rxjs",
    ],
)

jasmine_node_test(
    name = "test",
    templated_args = ["--node_options=--require=$(rlocation $(location //tools/testing:node_es5))"],
    deps = [
        ":test_lib",
        "//tools/testing:node",
        "//tools/testing:node_es5",
    ],
)

karma_web_test_suite(
    name = "test_web",
    deps = [
        ":test_lib",
    ],
)

/**
 * Root tsconfig file for use in all tests.
 */
{
  "extends": "./tsconfig-build.json",
  "compilerOptions": {
    "strict": false,
    "types": ["node", "jasmine"],
    "plugins": [{
        "name": "@bazel/tsetse",
        "disabledRules": ["must-use-promises"]
    }]
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true,
    "devmodeTargetOverride": "es5"
  }
}
